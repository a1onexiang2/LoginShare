<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShareDialog.Top" parent="ShareDialog">
        <item name="android:windowAnimationStyle">@style/ShareDialog.Animation.Top</item>
    </style>

    <style name="ShareDialog.Animation.Top">
        <item name="android:windowEnterAnimation">@anim/show_dialog_share_top</item>
        <item name="android:windowExitAnimation">@anim/dismiss_dialog_share_top</item>
    </style>

</resources>
